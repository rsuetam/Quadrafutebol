<p id="notice"><%= notice %></p>

<h1>Partidas</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Data</th>
      <th>Local</th>
      <th>Horario</th>
      <th>Jogadores</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partidas.each do |partida| %>
      <tr>
        <td><%= partida.id %></td>
        <td><%= partida.Data %></td>
        <td><%= partida.Local %></td>
        <td><%= partida.Horario %></td>
        

        <td><%= link_to 'Exibir', partida %></td>
        <td><%= link_to 'Editar', edit_partida_path(partida) %></td>
        <td><%= link_to 'Excluir', partida, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova partida', new_partida_path %>
