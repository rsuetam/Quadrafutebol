<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <!--
      <th>Id usuario</th>
    --><th>ID</th>
      <th>Nome</th>
      <th>Idade</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <!--
        <td><%= user.id_usuario %></td>
      -->
        <td><%= user.id %></td>
        <td><%= user.nome %></td>
        <td><%= user.idade %></td>
        <td><%= user.telefone %></td>
        <td><%= link_to 'Exibir', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

